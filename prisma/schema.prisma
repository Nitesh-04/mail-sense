generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id         String              @id @default(uuid())
  clerkId    String              @unique
  name       String
  mailId     String              @unique
  emails     Email[]
  embeddings PineconeEmbedding[]
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
}

model Email {
  id                  String             @id @default(uuid())
  clerkId             String
  sender              String
  subject             String
  body                String?
  summary             String
  receivedAt          DateTime
  category            Category
  user                User               @relation(fields: [clerkId], references: [clerkId], onDelete: Cascade)
  pineconeEmbeddingId String? 
  pineconeEmbedding   PineconeEmbedding?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@index([clerkId])
  @@index([receivedAt])
}

enum Category {
  Academics
  Cdc
  Events
  Hostel
  Misc
}

model PineconeEmbedding {                      // local embedding save
  id        String   @id @default(uuid())
  clerkId   String
  emailId   String   @unique
  embedding Float[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [clerkId], references: [clerkId], onDelete: Cascade)
  email     Email    @relation(onDelete: Cascade, fields: [emailId], references: [id])

  @@index([clerkId])
  @@index([emailId])
}